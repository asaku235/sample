<table>
<thead>
<tr>
<th>新着一覧</th>
<th>投稿者</th>
<th>投稿日時</th>
<th>編集</th>
<th>削除</th>
</tr>
</thead>
<tbody>
<% @tasks.each do |task| %>
<tr>
<td><%= link_to task.title, task_path(task) %></td>
<td><%= link_to task.user.username, task_path(task) %></td>
<td><%= task.created_at.strftime('%Y年%m月%d日 %H:%M') %></td>
  <% if user_signed_in? && task.user_id == current_user.id %>
<td><%= link_to '○', edit_task_path(task) %></td>
<td><%= link_to '○', task_path(task), method: :delete %></td>
  <% else %>
<td>×</td>
<td>×</td>
  <% end %>
</tr>
<% end %>
</tbody>
</table>
